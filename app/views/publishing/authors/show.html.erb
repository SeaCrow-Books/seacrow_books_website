<div class="mt-5 row justify-content-center">
  <div class="col-lg-10">
    <h1 class="mb-4"><%= @author.name.titleize %></h1>
    <div class="row">
      <% @author.books.each do |book| %>
          <div class="col-12 col-md-4 mb-4"> <!-- Responsive column: full-width on small screens, 1/3 on medium and up -->
              <%= link_to book_path(book) do %>
                  <%= image_tag book.cover, alt: book.title, class: "img-fluid clickable-image" %>
              <% end %>
          </div>
      <% end %>
    </div>
  </div>
</div>

