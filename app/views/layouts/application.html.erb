<!DOCTYPE html>
<html>

  <!-- Head -->
  <%= render "shared/head" %>

  <!-- Navbar -->
  <%= render "shared/navbar" %>

  <!-- Notices -->
  <%= render "shared/notices" %>

  <!-- Body -->
  <body data-controller="google-analytics">
    <main>
      <div class="container">
        <%= yield %>
      </div>
    </main>
  </body>

  <!-- Remove by adding <% content_for :hide_footer, true %> to the view. -->
  <%= render "shared/footer" unless content_for?(:hide_footer) %>

</html>
