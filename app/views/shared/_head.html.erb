<head>

    <%
    meta_options = {
        title: yield(:page_title),
        description: yield(:page_description),
        canonical: request.path,
        site: "SeaCrow Books",
        reverse: true
    }
    
    # Conditionally add `noindex` to the hash if @noindex is set (e.g.   @noindex = true in controller)
    meta_options[:noindex] = true if @noindex
    %>

    <%= display_meta_tags meta_options %>

    
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <%= favicon_link_tag 'favicon.ico' %>

    <!-- Import fonts -->
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Poppins" />
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Cormorant" />

    <!-- GA -->
    <script src="https://www.googletagmanager.com/gtag/js?id=G-9MEFG153GW" data-turbo-track="reload" async></script>

</head>