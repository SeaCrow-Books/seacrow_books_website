<!-- app/views/posts/show.html.erb -->

<h1><%= @post.title %></h1>

<p>By: <%= @post.writer %></p>
<%= raw @post.content %>


<%= link_to 'Edit', edit_post_path(@post) %>
<%= link_to 'Delete', post_path(@post), method: :delete, data: { confirm: 'Are you sure?' } %>
<%= link_to 'Back to All Posts', posts_path %>
