<!-- Main Image -->
<div class="row justify-content-center">
  <div class="col-lg-10">
    <div class="post-show__main-image">
      <% if @post.main_image.attached? %>
        <%= image_tag @post.main_image, alt: @post.main_image_alt_text, class: "img-fluid mx-auto d-block" %>
      <% end %>
    </div>
  </div>
</div>

<!-- Article -->
  <div class="row justify-content-center">
    <div class="col-lg-6 col-md-8">
      <article>
      <h1 class="post-show__title"><%= @post.title.titleize %></h1>

        <div class="post-show__metadata">
          <%= @post.writer %> on <%= @post.updated_at.strftime('%B %d, %Y') %> | 
          <i class="bi bi-stopwatch"></i> <%= read_time(@post.content) %>
          <% if policy(@post).edit? %>
            | <%= link_to @post.persona.name, persona_path(@post.persona), class: "post-show__metadata-persona-link" %>
            <%= link_to edit_post_path(@post), 
              class: "post-show__metadata-edit-link", 
              data: { toggle: "tooltip", placement: "top" }, 
              title: "Edit post" do %>
              | <i class="bi bi-gear-wide-connected"></i>
            <% end %>

          <% end %>
        </div>

        <div class="post-show__categories">
            <% @post.categories.each do |category| %>
              <%= link_to category.name, category_path(category) %> 
              <%= '|' unless category == @post.categories.last %>
            <% end %>
        </div>
      
        <div class="post-show__article">
          <div data-spy="scroll" data-target="#toc" data-offset="0">
            <%= raw @post.content %>      
          </div> 
        </div>

      </article>        
    </div>
  </div>

















