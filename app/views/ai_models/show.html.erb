<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-lg-6">
      <div class="card shadow">
        <div class="card-body">
          <h1 class="card-title"><%= @ai_model.name %></h1>
          <hr>
          <p class="mb-4"><%= @ai_model.description %></p>
          <div class="d-flex justify-content-between align-items-center">
            <%= link_to 'Edit', edit_ai_model_path(@ai_model), class: 'btn btn-primary' %>
            <%= link_to 'Back to AI Models List', ai_models_path, class: 'btn btn-outline-secondary' %>
            <%= button_to 'Delete', @ai_model, method: :delete, 
              class: 'btn btn-danger', 
              form: { class: 'd-inline', data: { turbo_confirm: "Are you sure you want to delete this AI Model?" } } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
