
<section>
  <h1 class="category-show__title"><%= @category.name %> Articles</h1>
  <div class="category-show__description">
    <p class="category-show__description-text">
      <%= MarkdownRenderer.render(@category.description) %>
    </p>
  </div>

  <!-- Essential Guides -->
  <%= render partial: 'shared/latest_posts', locals: { posts: @essential_guides } %>

  <!-- Regular posts -->
  <%= render partial: 'shared/latest_posts', locals: { posts: @regular_posts } %>

  <!-- Display child and subchild categories and their posts -->
  <div class="category-show__children">
    <% @category.child_categories.each do |child| %>
      <%= display_category_and_posts(child) %>
    <% end %>
  </div>
</section>