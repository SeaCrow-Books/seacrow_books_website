<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-lg-10">
      <div class="card shadow">
        <div class="card-body">
          <h1 class="card-title text-center mb-4">Chat Custom Instructions</h1>
          <div class="table-responsive">
            <table class="table table-hover">
              <thead class="table-light">
                <tr>
                  <th>Name</th>
                  <th>Owner</th>
                  <th>Status</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% @chat_custom_instructions.each do |instruction| %>
                  <tr>
                    <td><%= instruction.name %></td>
                    <td><%= instruction.user.full_name.titleize %></td>
                    <td>
                      <% if instruction.status.present? %>
                        <span class="badge <%= instruction.status == 'visibility_private' ? 'bg-danger' : 'bg-success' %>">
                          <%= instruction.status.gsub('visibility_', '').titleize %>
                        </span>
                      <% else %>
                        <span class="badge bg-secondary">No status set</span>
                      <% end %>
                    </td>


                    <td>
                      <div class="btn-group" role="group" aria-label="Basic example">
                        <%= link_to 'Show', chat_custom_instruction_path(instruction), class: 'btn btn-outline-primary btn-sm' %> 
                        <%= link_to 'Edit', edit_chat_custom_instruction_path(instruction), class: 'btn btn-outline-primary btn-sm' %> 
                        <%= button_to 'Delete', chat_custom_instruction_path(instruction), method: :delete, class: 'btn btn-outline-danger btn-sm', form: { data: { turbo_confirm: "Are you sure you want to delete this instruction?" } } %>
                      </div>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <%= link_to 'New Custom Instruction', new_chat_custom_instruction_path, class: 'btn btn-outline-primary d-block mx-auto mb-3' %>
        </div>
      </div>
    </div>
  </div>
</div>
