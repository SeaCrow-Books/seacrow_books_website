<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-lg-6">
      <div class="card shadow">
        <div class="card-body">
          <h1 class="card-title d-flex justify-content-between align-items-center">
            <%= @chat_custom_instruction.name %>
            <span class="badge <%= @chat_custom_instruction.status == 'public' ? 'bg-success' : 'bg-danger' %>">
            <% if @chat_custom_instruction.status.present? %>
              <%= @chat_custom_instruction.status.gsub('visibility_', '').titleize %>
            <% else %>
              No status set
            <% end %>


            </span>
          </h1>
          <hr>
          <p class="mb-4"><%= @chat_custom_instruction.instruction_text %></p>
          <div class="d-flex justify-content-between align-items-center">
            <%= link_to 'Edit', edit_chat_custom_instruction_path(@chat_custom_instruction), class: 'btn btn-primary' %>
            <%= link_to 'Back to custom instructions', chat_custom_instructions_path, class: 'btn btn-outline-secondary' %>
            <%= button_to 'Delete', chat_custom_instruction_path(@chat_custom_instruction), method: :delete, 
              class: 'btn btn-danger', 
              form: { class: 'd-inline', data: { turbo_confirm: "Are you sure you want to delete this instruction?" } } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
