<div class="row">
  <div class="col-lg-6">
    <div class="card">
      <div class="card-body">
          <%= form_for email_capture, html: { class: 'form__container' } do |f| %>
            <div class="mt-3">
              <%= f.email_field :email, class: 'form-control form__input', placeholder: "Your best email..." %>
            </div>
            <div class="mb-3 mt-2 d-grid gap-2">
              <%= f.submit 'Download your free ebook', class: 'btn btn-primary' %>
            </div>
          <% end %>
      </div>
    </div>
  </div>
</div>
