<div class="row justify-content-center">
  <div class="col-lg-6 col-md-8">
    <section>

      <!-- Display the parent category if it exists -->
      <% if @category.parent_category.present? %>
        <div class="category-show__parent">
          <h2>Parent Category:</h2>
          <p><%= link_to @category.parent_category.name, category_path(@category.parent_category) %></p>
        </div>
      <% end %>

      <h1 class="category-show__title"><%= @category.name %> Articles</h1>
      <p class="category-show__description"><%= @category.description %></p>

      <!-- Display the articles/posts for this category -->
      <% @published_category_posts.each do |post| %>
        <!-- Render the tile posts -->
        <%= render partial: 'shared/tile_post', locals: { post: post } %>
      <% end %>

      <!-- Display child categories if they exist -->
      <% if @category.child_categories.any? %>
        <div class="category-show__children">
          <h3>Subcategories:</h3>
          <ul>
            <% @category.child_categories.each do |child| %>
              <li><%= link_to child.name, category_path(child) %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

    </section>
  </div>
</div>
