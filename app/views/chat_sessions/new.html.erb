<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow">
        <div class="card-body">
          <h1 class="card-title text-center mb-4">New Chat Session</h1>
          <%= form_with model: @chat_session, local: true do |f| %>
            <div class="mb-3">
              <%= f.label :session_name, 'Session Name', class: 'form-label' %>
              <%= f.text_field :session_name, class: 'form-control', placeholder: 'Enter a name for this session (optional)' %>
            </div>

            <!-- Dropdown for selecting a ChatCustomInstruction -->
            <div class="mb-3">
              <%= f.label :chat_custom_instruction_id, 'Select Custom Instruction', class: 'form-label' %>
              <%= f.collection_select :chat_custom_instruction_id, @filtered_instructions, :id, :name, { prompt: 'Choose a custom instruction' }, { class: 'form-select', required: true } %>
            </div>

            <!-- Model -->
            <div class="mb-3">
              <%= f.label :ai_model_id, "Select AI Model", class: 'form-label' %>
              <%= f.collection_select :ai_model_id, AiModel.all, :id, :name, {}, { class: 'form-select' } %>
            </div>  

            <!-- Status -->
            <div class="mb-3">
              <%= f.select :status, ChatSession.statuses.keys.map { |status| [status.titleize, status] }, {}, class: 'form-select' %>
            </div>

            <div class="text-center">
              <%= f.submit 'Start Chat', class: 'btn btn-primary' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>



