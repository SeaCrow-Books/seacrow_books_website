<div class="container mt-5">
  <h1>New Chat Session</h1>
  <%= form_with model: @chat_session, local: true, class: 'mt-3' do |f| %>
    <div class="form-group">
      <%= f.label :session_name, 'Session Name' %>
      <%= f.text_field :session_name, class: 'form-control', placeholder: 'Enter a name for this session (optional)' %>
    </div>

    <!-- New dropdown for selecting a ChatCustomInstruction -->
    <div class="form-group">
      <%= f.label :chat_custom_instruction_id, 'Select Custom Instruction' %>
      <%= f.collection_select :chat_custom_instruction_id, @chat_custom_instructions, :id, :name, {prompt: 'Choose a custom instruction'}, class: 'form-control' %>
    </div>

    <!-- Model -->
    <div class="form-group">
      <%= f.label :ai_model_id, "Select AI Model" %>
      <%= f.collection_select :ai_model_id, AiModel.all, :id, :name, {}, { class: 'form-select' } %>
    </div>  

    <%= f.submit 'Start Chat', class: 'btn btn-primary mt-2' %>
  <% end %>
</div>



